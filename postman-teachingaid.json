							"listen": "test",
							"script": {
								"exec": [
									"var jsonData = pm.response.json();",
									"if (pm.response.code === 200 && jsonData.token) {",
									"    pm.environment.set(\"token\", jsonData.token);",
									"    pm.test(\"Login Successful - Token Stored\", true);",
